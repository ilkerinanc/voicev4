<%= form_for @occasion, :html => { :class => "form-horizontal"} do |f| %>
  <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
  </div>
  <div class="control-group">
      <%= f.label :description, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :description, :rows => 3 %>
      </div>
  </div>

<div class="control-group">
  <%= f.label :day, :class => "control-label" %>
  <div class="controls">
   <%= select_tag :day, options_for_select([["Today", "today"], ["Tomorrow", "tomorrow"]]) %>
  </div>
</div>

<div class="control-group">
  <%= f.label "Time",  :class => "control-label" %>
  <div class="controls">
    <div class="input-append bootstrap-timepicker-component">
      <%= f.text_field :time, :class => "timepicker-default input-small"%>
      <span class="add-on">
        <i class="icon-time"></i>
      </span>
    </div>
  </div>
</div>
  <div class="control-group">   
    <div class="controls">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>

<% end %>
