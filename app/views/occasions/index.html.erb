<%= link_to "Create an Occasion", new_occasion_path, :class=>'btn btn-primary' %>

<p></p>
<div class="tabbable">
<ul class="nav nav-tabs" id="myTab">
 <li class="active"><a href="#upcomingOccasions" data-toggle="tab">Upcoming Occasions</a></li>
 <li><a href="#missedOccasions" data-toggle="tab">Missed Occasions</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane in active" id="upcomingOccasions">
        <div class="row">
          <div class="span10">
            <table class="table table-hover">
              <caption></caption>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% @upcomingoccasions.each do |occasion| %>
                  <tr>
                    <!-- Occasion.where('created_at > ?', 1.hour.ago).count -->
                      <td>
                        <% if occasion.created_at > 1.hour.ago %>
                        <span class="label label-warning">NEW!</span>
                        <% end %>
                        <%= link_to "#{occasion.name}", occasion_path(:occasion => occasion.id) %>
                      </td>
                      <td><%= occasion.description %></td>
                      <td><%= occasion.time %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
    <div class="tab-pane " id="missedOccasions">
        <div class="row">
          <div class="span10">
            <table class="table table-hover">
              <caption></caption>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% @missedoccasions.each do |occasion| %>
                  <tr>
                      <td>
                        <%= link_to "#{occasion.name}", occasion_path(:occasion => occasion.id) %>
                      </td>
                      <td><%= occasion.description %></td>
                      <td><%= occasion.time %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>