<% title "Surveys" %>
<%= link_to "New Survey", new_survey_path, :class=>'btn btn-primary' %>
<p></p>
<div class="tabbable">
<ul class="nav nav-tabs" id="myTab">
 <li class="active"><a href="#activeSurveys" data-toggle="tab">Active Surveys</a></li>
 <li><a href="#finishedSurveys" data-toggle="tab">Finished Surveys</a></li>
</ul>

 <div class="tab-content">
    <div class="tab-pane in active" id="activeSurveys">
        <div class="row">
          <div class="span12">
            <table class="table table-hover">
              <caption></caption>
              <thead>
                <tr>
                  <th>Survey Name</th>
                </tr>
              </thead>
              <tbody>
                <% @activeSurveys.each do |survey| %>
                  <tr>
                     <td><%= survey.name %></td>
                      <td><%= link_to "Show", survey,:class=>'btn btn-primary'%></td>
                 </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
<div class="tab-pane" id="finishedSurveys">
        <div class="row">
          <div class="span10">
            <table class="table table-hover">
              <caption></caption>
              <thead>
                <tr>
                  <th>Name</th>
                </tr>
              </thead>
              <tbody>
                <% @finishedSurveys.each do |survey| %>
                <tr>
                     <td><%= survey.name %></td>
                      <td><%= link_to "Show", survey,:class=>'btn btn-primary'%></td>
                 </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>
  </div>
</ul>

