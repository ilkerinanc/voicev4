<% title "Surveys" %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for survey in @surveys %>
    <tr>
      <td><%= survey.name %></td>
      <td><%= link_to "Show", survey,:class=>'btn btn-primary'%></td>
      <td><%= link_to "Edit", edit_survey_path(survey),:class=>'btn btn-primary'%></td>
      <td><%= link_to "Destroy", survey, :confirm => 'Are you sure?', :method => :delete,:class=>'btn btn-primary' %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New Survey", new_survey_path, :class=>'btn btn-primary' %>