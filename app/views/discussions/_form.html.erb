<%= form_for @discussion do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <%= f.fields_for :discussionposts do |builder| %>
    <%= render "discussionpost_fields", :f => builder %>
  <% end %>
  <p>
    <%= link_to_add_fields "Add Post", f, :discussionposts %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
