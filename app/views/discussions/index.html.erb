<%= link_to "Create a Discussion", new_discussion_path, :class=>'btn btn-primary' %>
<h1>Discussion List</h1>
<div class="row">
  <div class="span6">
    <table class="table table-hover">
      <caption></caption>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          
        </tr>
      </thead>
      <tbody>
        <% @discussions.each do |discussion| %>
          <tr>
            <td><%= link_to "#{discussion.name}", discussion_path(:discussion => discussion.id) %></td>
            <td><%= discussion.description %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
