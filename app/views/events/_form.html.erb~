	<%= f.text_area :description, :rows => 3%>
      </div>
  </div>
  <div class="control-group">
      <%= f.label :place, :class => "control-label" %>
      <div class="controls">
	<%= f.text_field :place%>
      </div>
  </div>

  <div class="control-group">
    <%= f.label :interest_tokens, "Interests", :class => "control-label" %>
