<div class="row">
  <div class="span4">
  </div>
  <%= render 'profile_top_center' %>
  <div clsas="span4">
  </div>
</div>
<hr class="bs-docs-separator"></hr>

<h1>Connections</h1>
<div class="row">
  <div class="span6">
    <table class="table table-hover">
      <caption></caption>
      <thead>
        <tr>
          <th>Name</th>
          <th>Username</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |u| %>
          <tr>
            <td><%= link_to "#{u.name} #{u.surname}", user_show_path(:user => u.id) %></td>
            <td><%= link_to "#{u.username}", user_show_path(:user => u.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
