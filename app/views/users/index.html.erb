<h1>User List</h1>
<div class="row">
  <div class="span4">
    <table class="table table-hover">
      <caption></caption>
      <thead>
        <tr>
          <th>Name</th>
          <th>Username</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= link_to "#{u.name} #{u.surname}", user_show_path(:user => u.id) %></td>
            <td><%= link_to "#{u.username}", user_show_path(:user => u.id) %></td>
            <td><button class="btn btn-mini btn-primary" type="button">Connect</button></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
