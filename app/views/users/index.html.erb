<h1>User List</h1>
<div class="row">
  <div class="span6">
    <table class="table table-hover">
      <caption></caption>
      <thead>
        <tr>
          <th>Name</th>
          <th>Username</th>
          <th>Connect</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= link_to "#{u.name} #{u.surname}", user_show_path(:user => u.id) %></td>
            <td><%= link_to "#{u.username}", user_show_path(:user => u.id) %></td>
            <% if current_user.friend_request_sent?(u) %>
              <td>Connect request sent.</td>
            <% elsif current_user.friends_with?(u) %>
              <td>Friends</td>
            <% else %>
              <td><%= link_to "Connect", friendships_path(:friend_id => u), :method => :post %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
