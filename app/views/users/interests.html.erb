<div class="row">
  <div class="span4">
  </div>
  <%= render 'profile_top_center' %>
  <div clsas="span4">
  </div>
</div>
<hr class="bs-docs-separator"></hr>

<h1>Interests</h1>
<div class="row">
  <div class="span6">
    <table class="table table-hover">
      <caption></caption>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Subscribe</th>
        </tr>
      </thead>
      <tbody>
        <% @interests.each do |interest| %>
          <tr>
            <td><%= link_to "#{interest.name}", interest %></td>
            <td><%= interest.description %></td>
            <% if current_user.subscribed?(interest) %>
              <td><%= link_to "Unsubscribe", unsubscribe_path(:interest_id => interest.id), :method => :post, :class=>'btn btn-danger btn-mini' %></td>
            <% else %>
              <td><%= link_to "Subscribe", subscribe_path(:interest_id => interest.id), :method => :post, :class=>'btn btn-primary btn-mini' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
